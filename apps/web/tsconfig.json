{
  "extends": "@mapledb/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": ".next",
    "paths": {
      "@assets/*": ["../../libs/assets/*"],
      "@components/*": ["./src/components/*"],
      "@gcp/*": ["./src/gcp/*"],
      "@graphql/*": ["./src/graphql/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@public/*": ["./public/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", ".eslintrc.js"]
}
